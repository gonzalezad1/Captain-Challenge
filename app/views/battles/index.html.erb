<p id="notice"><%= notice %></p>

<h1>Battles</h1>

<table>
  <thead>
    <tr>
      <th>Firstpersonnage</th>
      <th>Secondpersonnage</th>
      <th>Winner</th>
      <th>Recapfight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.firstpersonnage %></td>
        <td><%= battle.secondpersonnage %></td>
        <td><%= battle.winner %></td>
        <td><%= battle.recapfight %></td>
        <td><%= link_to 'Show', battle %></td>
        <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
        <td><%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

